---
import ToolsLayout from '$layouts/tools-layout.astro'
import UsesCard from '$components/cards/tool-card.astro'
import { getCollection } from 'astro:content'

const tools = await getCollection('tools')

const sortedToolsAlphabetically = tools.sort((a, b) => a.data.title.localeCompare(b.data.title))
---

<ToolsLayout>
	{sortedToolsAlphabetically.map((tool) => <UsesCard tool={tool} />)}
</ToolsLayout>
