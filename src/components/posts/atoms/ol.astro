---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'ol'> {}

const { ...props } = Astro.props
---

<ol class="mb-2 ml-2 list-inside list-decimal space-y-2 marker:text-heading md:ml-4" {...props}>
	<slot />
</ol>

<style>
	ol > :global(li) > :global(:first-child:not(code)) {
		@apply mt-2;
	}
</style>
