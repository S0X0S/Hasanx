---
import type { HTMLAttributes } from 'astro/types'
interface Props extends HTMLAttributes<'section'> {}
const { ...attr } = Astro.props
---

<section {...attr} class="space-y-2">
	<slot />
</section>

<style>
	section {
	}
	/* Parent Section's Heading */
	section > :global(:first-child) {
		@apply mb-2;
		color: red;
	}

	/* Children Section's Heading */
	section > section > :global(:first-child) {
		@apply mb-4 mt-4;
		color: yellow;
	}

	section > section {
		@apply pb-4;
	}
</style>
